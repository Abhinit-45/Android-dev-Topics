<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_dynamic_tertiary80"
    android:layout_marginBottom="6dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">



   <ImageView
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
       android:padding="12dp"
       android:src="@drawable/ic_launcher_background"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       android:id="@+id/imgV"/>

    <TextView
        android:id="@+id/txtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginTop="6dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text="Abineet"
        app:layout_constraintStart_toEndOf="@+id/imgV"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textsubheading"
        android:layout_marginTop="6dp"
        android:layout_marginStart="6dp"
        android:text="Recent massage from abhineet"
        app:layout_constraintTop_toBottomOf="@id/txtv"
        app:layout_constraintStart_toEndOf="@id/imgV" />

</androidx.constraintlayout.widget.ConstraintLayout>